<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WebApi.Cross.Views.SecureChannelPage">
    <ContentPage.Content>
        <StackLayout
            Orientation="Vertical"
            VerticalOptions="StartAndExpand">
            
            <Label Text="Username"/>
            <Editor
                Text="{Binding Username, Mode=OneWayToSource}"/>

            <Label Text="Password"/>
            <Entry
                IsPassword="True"
                Text="{Binding Password, Mode=OneWayToSource}"/>
            
            <Label Text="Message"/>
            <Editor
                Text="{Binding Message, Mode=OneWayToSource}"/>
            
            <Label Text="Response"/>
            <Editor
                HorizontalOptions="Fill"
                VerticalOptions="StartAndExpand"
                IsEnabled="False"
                Text="{Binding Response, Mode=OneWay}"/>
            <StackLayout
                Orientation="Horizontal">
                <Button
                    Text="Request secure channel"
                    Command="{Binding RequestSecureChannelCommand}"/>
                <Button
                    Text="Exchange Message"
                    Command="{Binding SendSecureMessageCommand}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>